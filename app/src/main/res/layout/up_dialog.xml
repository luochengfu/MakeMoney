<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="320dp"
            android:layout_height="130dp"
            android:src="@mipmap/app_up"
            android:scaleType="centerCrop"/>m

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTitle"
                    android:padding="5dp"
                    style="@style/black_14_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="土豆泥升级"
                    android:visibility="gone"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/tvMsg"
                    android:padding="5dp"
                    style="@style/black_13_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="土豆泥升级"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:id="@+id/llUp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOk"
                style="@style/white_14_style"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:background="@drawable/radius5dp_color_primary"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="升级" />



            <TextView
                android:id="@+id/tvCancel"
                style="@style/white_14_style"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/radius5dp_color_primary"
                android:gravity="center"
                android:text="关闭" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/llForceUp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center">
            <ProgressBar
                android:id="@+id/seekBar"
                android:layout_width="150dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_height="35dp"
                android:focusable="true"
                android:max="100"
                android:maxHeight="2.5dp"
                android:minHeight="2.5dp"
                android:visibility="gone"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@null"
                android:thumbOffset="1dip" />
            <TextView
                android:id="@+id/tvForceUp"
                style="@style/white_14_style"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/radius5dp_color_primary"
                android:gravity="center"
                android:text="立即升级" />


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>