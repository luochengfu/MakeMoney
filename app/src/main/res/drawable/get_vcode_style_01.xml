<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape >
            <solid android:color="@color/color_e7e7e7" />
            <stroke android:width="0.5dip" android:color="@color/color_e7e7e7"/>

            <!-- 指定圆角矩形的4个圆角的半径 -->
            <corners android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape >
            <gradient
                android:endColor="@color/color_E81534"
                android:startColor="@color/color_E81534" />
            <!--<solid android:color="#f8af01" />-->
            <!--<stroke android:width="0.5dip" android:color="#f8af01"/>-->

            <!-- 指定圆角矩形的4个圆角的半径 -->
            <corners android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                />
        </shape>
    </item>
</selector>

