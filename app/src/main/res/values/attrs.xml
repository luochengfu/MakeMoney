<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MyTitleBar">
        <attr name="leftText" format="reference|string" />
        <attr name="middleText" format="reference|string" />
        <attr name="rightText" format="reference|string" />
        <attr name="rightVisible" format="boolean" />
        <attr name="leftVisible" format="boolean" />
        <attr name="showStatusBar" format="boolean" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
        <attr name="rightIconTwo" format="reference" />
        <attr name="rightBackground" format="reference" />
        <attr name="middleTextColor" format="reference" />
        <attr name="rightTextColor" format="reference" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="background" format="reference" />
        <attr name="statusBarBackgroundColor" format="reference" />
        <attr name="showDividerLine" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SlidingTabLayout">
        <attr name="highlightTextColor" format="color|reference" />
        <attr name="highTextBackground" format="reference" />
        <attr name="normalTextColor" format="color|reference" />
        <attr name="dividerLineColor" format="color|reference" />
        <attr name="shadowLineColor" format="color|reference" />
        <attr name="shadowLineWrapperOffset" format="dimension" />
        <attr name="shadowLineFillParent" format="boolean" />
        <attr name="showShadowLine" format="boolean" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="useScrollView" format="boolean" />
        <attr name="layoutBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="InputCounter">
        <attr name="input_max_count" format="integer"/>
        <attr name="edit_text_color" format="color"/>
        <attr name="edit_text_size" format="dimension"/>
        <attr name="edit_text_padding" format="dimension"/>
        <attr name="edit_text_hint" format="string"/>
        <attr name="label_text_size" format="dimension"/>
        <attr name="label_text_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="EmptyDataView">
        <attr name="emptyImage" format="reference" />
        <attr name="emptyText" format="string" />
    </declare-styleable>

    <declare-styleable name="DragBubbleView">
        <attr name="bubbleRadius" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ShapeImageView">
        <!--形状-->
        <attr name="shape" format="enum">
            <enum name="circle" value="0" />            <!-- 圆形 -->
            <enum name="round_rectangle" value="1" />   <!-- 圆角矩形 -->
        </attr>

        <attr name="borderColor" format="color" />      <!-- 边框颜色 -->
        <attr name="borderWidth" format="dimension" />  <!-- 边框宽度 -->
        <attr name="borderRadius" format="dimension" /> <!-- 圆角矩形圆角半径-->
        <attr name="pressedColor" format="color" />     <!-- 按下蒙版颜色 -->

    </declare-styleable>

    <declare-styleable name="DatePicker">
        <attr name="picker_text_color" format="color" />
        <attr name="picker_select_textColor" format="color" />
        <attr name="picker_split" format="color" />
        <attr name="picker_split_height" format="dimension" />
    </declare-styleable>
</resources>


